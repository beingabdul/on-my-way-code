<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
<script
  src="https://cdn.quilljs.com/1.3.6/quill.min.js"
  type="text/javascript"
></script>
<link
  rel="stylesheet"
  type="text/css"
  href="assets/vendor_assets/file-uploader/file-upload-with-preview.min.css"
/>

<div class="contents">
  <div class="crm mb-25">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb-main">
            <h4 class="text-capitalize breadcrumb-title">Services</h4>
            <div class="breadcrumb-action justify-content-center flex-wrap">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="#"><i class="uil uil-airplay"></i>Services</a>
                  </li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
        <div class="col-12 mb-30">
          <div class="support-ticket-system support-ticket-system--search">
            <div
              class="userDatatable userDatatable--ticket userDatatable--ticket--2 mt-1"
            >
              <div class="d-flex justify-content-between">
                <p></p>
                <button
                  data-bs-toggle="modal"
                  data-bs-target="#modal-ag"
                  class="btn btn-primary btn-default btn-squared mb-25"
                >
                  Add Services
                </button>
              </div>
              <div class="">
                <table
                  class="table mb-0 table-borderless dt-responsive"
                  id="DataTable"
                >
                  <thead>
                    <tr class="userDatatable-header">
                      <th>
                        <span class="userDatatable-title">Service Icon</span>
                      </th>
                      <th>
                        <span class="userDatatable-title">Service Name</span>
                      </th>
                      <th>
                        <span class="userDatatable-title">Category Name</span>
                      </th>
                      <th>
                        <span class="userDatatable-title">Price</span>
                      </th>
                      <th>
                        <span class="userDatatable-title">Allow Quantity</span>
                      </th>
                      <th>
                        <span class="userDatatable-title">Description</span>
                      </th>
                      <th>
                        <span class="userDatatable-title">Order</span>
                      </th>
                      <th>
                        <span class="userDatatable-title"
                          >Service Time (minutes)</span
                        >
                      </th>
                      <th>
                        <span class="userDatatable-title">Status</span>
                      </th>
                      <th class="actions">
                        <span class="userDatatable-title">Actions</span>
                      </th>
                    </tr>
                  </thead>
                  <tbody id="serviceData"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ends: .row -->
    </div>
  </div>
  <div
    class="modal-basic modal fade show"
    id="modal-ag"
    tabindex="-1"
    role="dialog"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content modal-bg-white">
        <div class="modal-header">
          <h6 class="modal-title">Add Service Category</h6>
          <button
            type="button"
            class="close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <img src="img/svg/x.svg" alt="x" class="svg" />
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              Name:
              <div class="form-group mb-3 mt-1">
                <input
                  type="text"
                  class="form-control form-control-lg"
                  placeholder="Name"
                  name="serviceName"
                />
              </div>
            </div>
            <div class="col-md-6">
              Price:
              <div class="form-group mb-3 mt-1">
                <input
                  type="number"
                  class="form-control form-control-lg"
                  placeholder="00000"
                  name="price"
                  min="1"
                  max="9999"
                  value="1"
                />
              </div>
            </div>

            <div class="col-md-6">
              Service Time (in minutes):
              <div class="form-group mb-3 mt-1">
                <input
                  type="number"
                  class="form-control form-control-lg"
                  placeholder="0"
                  name="serviceTime"
                  min="1"
                  max="9999"
                  value="1"
                />
              </div>
            </div>
            <div class="col-md-6">
              Allow Quantity:
              <div class="form-group mb-3 mt-1">
                <select
                  class="form-control form-control-lg select2"
                  id="allowQty"
                >
                  <option value="false">No</option>
                  <option value="true">Yes</option>
                </select>
              </div>
            </div>
            <div class="col-md-6">
              Select Category:
              <div class="form-group mb-3 mt-1">
                <select
                  class="form-control form-control-lg select2"
                  id="serviceCategory"
                ></select>
              </div>
            </div>
            <div class="col-md-12">
              Select Image:
              <div class="custom-file-container" data-upload-id="myFirstImage">
                <label style="color: black"
                  >* Banner Image
                  <a
                    href="javascript:void(0)"
                    class="custom-file-container__image-clear"
                    title="Clear Image"
                    >x</a
                  ></label
                >
                <label class="custom-file-container__custom-file">
                  <input
                    type="file"
                    accept="image/png, image/gif, image/jpeg"
                    class="custom-file-container__custom-file__custom-file-input"
                    id="file"
                    name="file"
                  />
                  <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
                  <span
                    class="custom-file-container__custom-file__custom-file-control"
                  ></span>
                </label>
                <div class="custom-file-container__image-preview"></div>
              </div>
            </div>

            <div class="col-sm-12">
              Description:
              <div id="snow-wrapper">
                <div id="snow-container">
                  <div class="quill-toolbar">
                    <span class="ql-formats">
                      <select class="ql-header">
                        <option value="1">Heading</option>
                        <option value="2">Subheading</option>
                        <option selected>Normal</option>
                      </select>
                      <select class="ql-font">
                        <option selected>Sailec Light</option>
                        <option value="sofia">Sofia Pro</option>
                        <option value="slabo">Slabo 27px</option>
                        <option value="roboto">Roboto Slab</option>
                        <option value="inconsolata">Inconsolata</option>
                        <option value="ubuntu">Ubuntu Mono</option>
                      </select>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-bold"></button>
                      <button class="ql-italic"></button>
                      <button class="ql-underline"></button>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-list" value="ordered"></button>
                      <button class="ql-list" value="bullet"></button>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-link"></button>
                      <button class="ql-image"></button>
                      <button class="ql-video"></button>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-formula"></button>
                      <button class="ql-code-block"></button>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-clean"></button>
                    </span>
                  </div>
                  <div class="editor"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a
            onclick="validateService()"
            id="save_btn"
            type="button"
            class="btn btn-primary btn-sm"
          >
            Save
          </a>
          <button
            type="button"
            class="btn btn-secondary btn-sm"
            data-bs-dismiss="modal"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
  <div
    class="modal-basic modal fade show"
    id="modal-description"
    tabindex="-1"
    role="dialog"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content modal-bg-white">
        <div class="modal-header">
          <h6 class="modal-title">Description</h6>
          <button
            type="button"
            class="close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <img src="img/svg/x.svg" alt="x" class="svg" />
          </button>
        </div>
        <div class="modal-body" id="service_description"></div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary btn-sm"
            data-bs-dismiss="modal"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="assets/vendor_assets/file-uploader/file-upload-with-preview.min.js"></script>
<script src="js/services.js"></script>
<script>
  $(function () {
    $("#selectGroup2").select2();
    var editor = new Quill(".editor", {
      modules: { toolbar: ".quill-toolbar" },
      theme: "snow",
    });

    $(".image-link").lightGallery();
    var first = new FileUploadWithPreview("myFirstImage");
  });
</script>
